                                    <TextBox   Grid.Column="5" Grid.Row="1" x:Name="txtHoraSalida"        HorizontalAlignment="Center" Margin="0,0,0,5" Width="150" />
                                </Grid>

                                <Grid  Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions >
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions >
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Motivo de la llamada:" HorizontalAlignment="Left"   Margin="0,0,0,0" />
                                    <TextBlock Grid.Column="0" Grid.Row="4" Text="Observaciones:" HorizontalAlignment="Left" Margin="0" Width="auto"/>
                                    <TextBox x:Name="MotivoBtxt"      Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" PlaceholderText="" Margin="0" Width="765" />
                                    <TextBox x:Name="observacionesBtxt"   Grid.Column="1" Grid.Row="4" Margin="15" Width="765" Height="280"/>

                                </Grid>
                            </StackPanel>
                        </PivotItem>
                        <PivotItem x:Name="tapLamadaManual" Header="Salida(Manualmente)"  Width="auto"  Height="auto" >
