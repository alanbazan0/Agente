                                        <TextBox Grid.Column="1" x:Name="txtidLlamadaEntrada" Grid.ColumnSpan="2" PlaceholderText="" HorizontalAlignment="Stretch" Margin="8" />

                                    </Grid>

                                    <Grid >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="130"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="No. extension"   Margin="8"  />
                                        <TextBox Grid.Column="1" x:Name="NoExtensionEntrada" Grid.ColumnSpan="2" PlaceholderText="" HorizontalAlignment="Stretch" Margin="8" />
                                    </Grid>

                                    <Grid >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="130"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Estatus"   Margin="8"  />
                                        <TextBox Grid.Column="1" x:Name="estatusTextBox" Grid.ColumnSpan="2" PlaceholderText="" HorizontalAlignment="Stretch" Margin="8" />
                                    </Grid>
                                </VariableSizedWrapGrid>
                                <VariableSizedWrapGrid Grid.Column="0" Grid.Row="2" Margin="5"  x:Name="LamadaEntrante2"  Orientation="Horizontal" Width="Auto"   >
